#!/bin/bash

echo_green "********************** Installing Sublime Text 3 ********************"
sudo add-apt-repository -y ppa:webupd8team/sublime-text-3
sudo apt-get update
sudo apt-get install sublime-text-installer

echo_blue "Setting Up Sublime Packages"
wget https://sublime.wbond.net/Package%20Control.sublime-package --no-check-certificate
mkdir -p ~/.config/sublime-text-3/Installed\ Packages
mv Package\ Control.sublime-package ~/.config/sublime-text-3/Installed\ Packages/

mkdir -p  ~/.config/sublime-text-3/Packages/User/Package\ Control
mkdir -p  ~/.config/sublime-text-3/Packages/User

echo " {
  \"bootstrapped\": true,
  \"in_process_packages\":
  [
  ],
  \"installed_packages\":
  [
    \"All Autocomplete\",
    \"AutoFileName\",
    \"ayu\",
    \"Boxy Theme\",
    \"BracketHighlighter\",
    \"C++ Completions\",
    \"ClangAutoComplete\",
    \"CMake\",
    \"CMakeEditor\",
    \"ColorSchemeEditor\",
    \"Colorsublime\",
    \"DocBlockr\",
    \"Git\",
    \"GitGutter\",
    \"LaTeXTools\",
    \"Makefile Improved\",
    \"Markdown Extended\",
    \"Markdown Preview\",
    \"MarkdownEditing\",
    \"MarkdownLivePreview\",
    \"Monokai Extended\",
    \"Origami\",
    \"Package Control\",
    \"PackageResourceViewer\",
    \"Python Completions\",
    \"SideBarEnhancements\",
    \"SublimeCodeIntel\",
    \"SublimeGDB\",
    \"SublimeLinter\",
    \"Terminal\",
    \"Themr\",
    \"WordHighlight\"
  ]
}


" > ~/.config/sublime-text-3/Packages/User/Package\ Control.sublime-settings

echo " {
  \"added_words\":
  [
    \"Kalman\",
    \"decorrelate\",
    \"keyframe\",
    \"decorrelated\",
    \"keyframes\",
    \"fabmap\",
    \"subgraphing\"
  ],
  \"color_scheme\": \"Packages/Boxy Theme/schemes/Boxy Monokai.tmTheme\",
  \"file_exclude_patterns\":
  [
    \"*.pyc\",
    \"*.pyo\",
    \"*.exe\",
    \"*.dll\",
    \"*.obj\",
    \"*.o\",
    \"*.a\",
    \"*.lib\",
    \"*.so\",
    \"*.dylib\",
    \"*.ncb\",
    \"*.suo\",
    \"*.pdb\",
    \"*.idb\",
    \".DS_Store\",
    \"*.class\",
    \"*.psd\",
    \"*.db\",
    \"*.sublime-workspace\"
  ],
  \"font_size\": 9,
  \"hot_exit\": false,
  \"ignored_packages\":
  [
    \"Makefile\",
    \"Vintage\"
  ],
  \"remember_full_screen\": true,
  \"remember_open_files\": false,
  \"spell_check\": false,
  \"theme\": \"Boxy Monokai.sublime-theme\"

}" > ~/.config/sublime-text-3/Packages/User/Preferences.sublime-settings
